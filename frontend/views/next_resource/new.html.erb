<%= setup_context :title => I18n.t("plugins.next_resource.title") %>

<div class="row">
  <div class="col-md-12">
    <%= render_aspace_partial :partial => "shared/flash_messages" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12" style="padding: 30px;">
    <h2><%= I18n.t("plugins.next_resource.title") %></h2>

    <%= form_tag({:controller => :next_resource, :action => :create}, {:class => "form-horizontal", :method => "GET"}) do |form| %>

      <div class="form-group required">
        <label class="control-label col-sm-2">ID</label>
        <div class="controls col-sm-4">
          <input id="next-resource-id" class="form-control" name="id" type="text" value="<%= @id %>"></input>
        </div>
      </div>

      <div class="form-group required">
        <label class="control-label col-sm-2">Title</label>
        <div class="col-sm-6">
          <textarea id="next-resource-title" class="form-control" name="title" rows="3"></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="controls pull-right">
          <button class="btn btn-primary"><%= I18n.t("plugins.next_resource.actions.submit") %></button>
          <%= link_to I18n.t("actions.cancel"), {:controller => :next_resource, :action => :index}, :class => "btn btn-cancel btn-default" %>
        </div>
      </div>

    <% end %>

  </div>
</div>
